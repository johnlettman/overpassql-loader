{
    "compilerOptions": {
        "strict": true,
        "target": "ES2018",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,

        "allowJs": true,
        "sourceMap": true,
        "declaration": true,

        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,

        "outDir": "lib",
    },
    "include": ["src/*.ts"],
    "exclude": ["src/*.test.ts"]
}
