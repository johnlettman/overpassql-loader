{
    "compilerOptions": {
        "target": "ES2018",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,

        "strict": true,
        "allowJs": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,

        "outDir": "lib",
    },
    "include": ["src/**/*"]
}